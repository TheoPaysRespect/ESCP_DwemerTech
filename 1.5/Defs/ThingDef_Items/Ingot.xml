<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--ingots-->
    <ThingDef ParentName="ResourceBase">
        <defName>ESCP_DwemerMetalIngot</defName>
        <label>Dwemer metal ingot</label>
        <description>A Dwemer metal ingot. Easily mistaken for bronze, it never rusts or dulls. The secret to its creation was tightly guarded by the Dwemer.</description>
        <graphicData>
            <texPath>Things/Items/Resources/DwemerMetalIngot</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
        </graphicData>
        <soundInteract>Metal_Drop</soundInteract>
        <soundDrop>Metal_Drop</soundDrop>
        <useHitPoints>false</useHitPoints>
        <healthAffectsPrice>false</healthAffectsPrice>
        <statBases>
            <RoyalFavorValue>0.1</RoyalFavorValue>
            <MarketValue>30</MarketValue>
            <Mass>1</Mass>
            <StuffPower_Armor_Sharp>1.22</StuffPower_Armor_Sharp>
            <StuffPower_Armor_Blunt>1.12</StuffPower_Armor_Blunt>
            <StuffPower_Armor_Heat>1</StuffPower_Armor_Heat>
            <StuffPower_Insulation_Cold>3</StuffPower_Insulation_Cold>
            <SharpDamageMultiplier>1.2</SharpDamageMultiplier>
            <BluntDamageMultiplier>1.35</BluntDamageMultiplier>
        </statBases>
        <thingCategories>
            <li>ResourcesRaw</li>
        </thingCategories>
        <burnableByRecipe>false</burnableByRecipe>
        <smeltable>true</smeltable>
        <possessionCount>5</possessionCount>
        <minRewardCount>10</minRewardCount>
        <stuffProps>
            <categories>
                <li>Metallic</li>
                <!--<li>ESCP_Dwemer_Material</li>-->
            </categories>
            <appearance>Metal</appearance>
            <commonality>0.01</commonality>
            <constructEffect>ConstructMetal</constructEffect>
            <color>(157,130,68)</color>
            <soundImpactBullet>BulletImpact_Metal</soundImpactBullet>
            <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
            <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
            <soundImpactMelee>Pawn_Melee_Punch_HitBuilding_Metal</soundImpactMelee>
            <statFactors>
                <MaxHitPoints>2.6</MaxHitPoints>
                <Beauty>2</Beauty>
                <Flammability>0</Flammability>
                <WorkToMake>2.2</WorkToMake>
                <WorkToBuild>2.2</WorkToBuild>
                <MeleeWeapon_CooldownMultiplier>0.8</MeleeWeapon_CooldownMultiplier>
            </statFactors>
        </stuffProps>
        <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
        <allowedArchonexusCount>60</allowedArchonexusCount>
        <tradeTags>
            <li>ESCP_Dwemer</li>
        </tradeTags>
    </ThingDef>

