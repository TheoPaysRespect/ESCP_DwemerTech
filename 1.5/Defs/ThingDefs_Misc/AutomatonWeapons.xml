        <defName>ESCP_SphereSword</defName>
        <label>sphere sword</label>
        <description>PLACEHOLDER</description>
        <graphicData>
            <texPath>Things/Items/Weapons/DwemerSphereSword</texPath>
            <graphicClass>Graphic_Single</graphicClass>
