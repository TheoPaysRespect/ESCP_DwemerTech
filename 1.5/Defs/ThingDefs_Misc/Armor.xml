<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <!--accessories-->
    <ThingDef ParentName="ApparelMakeableBase">
        <defName>ESCP_DwemerQuiver</defName>
        <label>Dwemer quiver</label>
        <description>PLACEHOLDER</description>
        <techLevel>Medieval</techLevel>
        <graphicData>
            <texPath>Things/Items/Accessories/DwemerQuiver</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <Mass>1</Mass>
            <WorkToMake>4500</WorkToMake>
            <Flammability>0</Flammability>
            <EquipDelay>1</EquipDelay>
            <RangedCooldownFactor>0.25</RangedCooldownFactor>
        </statBases>
        <costList>
            <ESCP_DwemerMetalIngot>15</ESCP_DwemerMetalIngot>
        </costList>
        <recipeMaker>
            <researchPrerequisite>ESCP_DwemerArmory1</researchPrerequisite>
            <recipeUsers>
                <li MayRequire="dankpyon.medieval.overhaul">DankPyon_Anvil</li>
            </recipeUsers>
        </recipeMaker>
        <thingCategories>
            <li>ApparelUtility</li>
        </thingCategories>
        <apparel>
            <careIfWornByCorpse>false</careIfWornByCorpse>
            <careIfDamaged>false</careIfDamaged>
            <countsAsClothingForNudity>false</countsAsClothingForNudity>
            <bodyPartGroups>
                <li>Shoulders</li>
            </bodyPartGroups>
            <layers>
                <li>Belt</li>
            </layers>
        </apparel>
    </ThingDef>

    <!--armor-->

    <ThingDef Name="ESCP_DwemerArmorBase" ParentName="ArmorSmithableBase" Abstract="true">
        <possessionCount>1</possessionCount>
        <recipeMaker>
            <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
            <researchPrerequisite>ESCP_DwemerArmory1</researchPrerequisite>
        </recipeMaker>
        <graphicData>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <thingSetMakerTags>
            <li>RewardStandardQualitySuper</li>
        </thingSetMakerTags>
        <equippedStatOffsets>
            <MoveSpeed>-0.8</MoveSpeed>
        </equippedStatOffsets>
        <thingCategories>
            <li>ApparelArmor</li>
        </thingCategories>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
            <layers>
                <li>Middle</li>
                <li>Shell</li>
            </layers>
            <tags>
                <li>MedievalMilitary</li>
            </tags>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
    </ThingDef>

