            <operations>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/PawnKindDef[defName="ESCP_SphereMelee"]/lifeStages/li[1]/bodyGraphicData/texPath</xpath>
                    <value>
                        <texPath>Things/Pawn/Automaton/Other/DwemerSphere</texPath>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/PawnKindDef[defName="ESCP_SphereMelee"]/lifeStages/li[2]/bodyGraphicData/texPath</xpath>
                    <value>
                        <texPath>Things/Pawn/Automaton/Other/DwemerSphere</texPath>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>